@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
}
<br />
<h3>Marka Listesi</h3>
<p>
    <a class="btn btn-outline-warning col-1" asp-action="Create">Yeni Marka Ekle</a>
</p>
<table class="table my-2 table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               @* <img src="/Img/@item.Logo" alt="@item.Logo" height="40"/>*@
                <img src="/Img/@Html.DisplayFor(modelItem => item.Logo)" alt="" height="50" />
                @*@Html.DisplayFor(modelItem => item.Logo)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="col-3">
                <a class="btn btn-success col-4" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger col-4" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
