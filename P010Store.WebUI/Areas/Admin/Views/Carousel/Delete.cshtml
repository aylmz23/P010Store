@model P010Store.Entities.Carousel

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>

<h4>Silmek İstediğinize Emin misiniz?</h4>
<div>
    <h4>Carousel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>

    </dl>
    <div class="row col-4 my-2">
            <img src="/Img/@Model.Image" alt="" />
        <p></p>
            <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-danger col-12" />
            <br /> <br />
            <a class="btn btn-outline-secondary col-12" asp-action="Index">Listeye Dön</a>
        </form>
    </div>
</div>
